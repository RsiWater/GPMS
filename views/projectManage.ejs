</head>

<body>
  <ul class="nav">
    <li id="home" class="icon"><a href="http://elearning.nuk.edu.tw"><img class="placeHolder" src="" alt="" /></a></li>
    <li><a href="http://elearning.nuk.edu.tw">顯示全部</a></li>
    <li><a href="http://elearning.nuk.edu.tw">回到主頁面</a></li>
    <li><a class='signout' href="">登出</a></li>
    <!-- <li id="search" class="icon"><a href="http://elearning.nuk.edu.tw"><img class="placeHolder" src="" alt="" /></a>
    </li> -->
  </ul>


  <div id="head" class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">專題列表</h1>
  </div>

  <!--Administrator-->
  <div class="container Administrator" style="display:none">

    <nav class="navbar navbar-light bg-light">
      <form class="form-inline">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search"
          onkeydown="showSearch(event,this)">
        <button class="btn btn-outline-success my-2 my-sm-0" type="button">搜尋</button>
      </form>
    </nav>
    <ul class="list-group">
      <img src="../images/ERROR.gif" style="display: none;">
      <% project.forEach(ele => { %>
      <li class="list-group-item">
        <%= ele.Name %>
        <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
          <button type="button" class="btn btn-primary  <%= ele.Name %>">更改專題</button>
        </div>
      </li>
      <% }) %>
    </ul>

    <div class="row justify-content-md-center">
      <div aria-label="Page navigation example">
        <div class="pagination" id="pageid">
        </div>
      </div>
    </div>



    <!-- Modal Administrator-->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">確定要刪除帳號?</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            此操作將不可復原
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">不!</button>
            <button type="button" class="btn btn-primary">沒問題</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>

  </div>

  <!-- Student-->
  <div class="container Student" style="display:none">


    <nav class="navbar navbar-light bg-light">
      <form class="form-inline">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search"
          onkeydown="showSearch(event,this)">
        <button class="btn btn-outline-success my-2 my-sm-0" type="button">搜尋</button>
      </form>
    </nav>



    <ul class="list-group">
      <img src="../images/ERROR.gif" style="display: none;">
      <% project.forEach(ele => { %>
      <li class="list-group-item">
        <div class="nameAndScore">
          <span><%= ele.Name%></span>
          <span class="scoreContainer" style="color:#707070">學生互評:<%= ele.Score %>,訪客投票:<%= ele.Vote %></span>
        </div>
        <div>
          <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModalCenter"
              name="<%= ele.TeamLeader%>">互評專題</button>
          </div>
          <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-primary  <%= ele.Name %>">瀏覽專題</button>
          </div>
        </div>
      </li>
      <% }) %>
    </ul>

    <div class="row justify-content-md-center">
      <div aria-label="Page navigation example">
        <div class="pagination" id="pageid">
        </div>
      </div>
    </div>



    <!-- Modal Student-->

    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
      aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalCenterTitle">評分</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="card-group w-100">
              <span class="card w-25" style="border: 0px;"><img src="../images/bheart.png" class="card-img-top"
                  alt="..."></span>
              <span class="card w-25" style="border: 0px;"><img src="../images/bheart.png" class="card-img-top"
                  alt="..."></span>
              <span class="card w-25" style="border: 0px;"><img src="../images/bheart.png" class="card-img-top"
                  alt="..."></span>
              <span class="card w-25" style="border: 0px;"><img src="../images/bheart.png" class="card-img-top"
                  alt="..."></span>
              <span class="card w-25" style="border: 0px;"><img src="../images/bheart.png" class="card-img-top"
                  alt="..."></span>
              <span class="card w-25" style="border: 0px;"><img src="../images/bheart.png" class="card-img-top"
                  alt="..."></span>
              <span class="card w-25" style="border: 0px;"><img src="../images/bheart.png" class="card-img-top"
                  alt="..."></span>
              <span class="card w-25" style="border: 0px;"><img src="../images/bheart.png" class="card-img-top"
                  alt="..."></span>
              <span class="card w-25" style="border: 0px;"><img src="../images/bheart.png" class="card-img-top"
                  alt="..."></span>
              <span class="card w-25" style="border: 0px;"><img src="../images/bheart.png" class="card-img-top"
                  alt="..."></span>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary btn-score">確定評分</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--Teacher-->
  <div class="container Teacher" style="display:none">

    <nav class="navbar navbar-light bg-light">
      <form class="form-inline">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search"
          onkeydown="showSearch(event,this)">
        <button class="btn btn-outline-success my-2 my-sm-0" type="button">搜尋</button>
      </form>
    </nav>
    <ul class="list-group">
      <img src="../images/ERROR.gif" style="display: none;">
      <% project.forEach(ele => { %>
      <li class="list-group-item">
        <div class="nameAndScore">
          <span><%= ele.Name%></span>
          <span class="scoreContainer" style="color:#707070">老師評分:<%= ele.Grade %></span>
        </div>
        <div>
          <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModalCenterTeacher"
              name="<%= ele.TeamLeader%>">專題評分</button>
          </div>
          <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-primary btn-visit" name="<%= ele.TeamLeader%>">瀏覽專題</button>
          </div>
        </div>
      </li>
      <% }) %>
    </ul>

    <div class="row justify-content-md-center">
      <div aria-label="Page navigation example">
        <div class="pagination" id="pageid">
        </div>
      </div>
    </div>



    <!-- Modal Teacher-->
    <div class="modal fade" id="exampleModalCenterTeacher" tabindex="-1" role="dialog"
      aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalCenterTitle">評分</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="card-group w-100">
              <input type="text" class="form-control scoreForm" placeholder="輸入評分(0~100)" aria-label="輸入評分(0~100)"
                aria-describedby="button-addon2">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary scoreSubmit">確定評分</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!--Guest-->
  <div class="container Guest" style="display:none">
    <nav class="navbar navbar-light bg-light">
      <form class="form-inline">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search"
          onkeydown="showSearch(event,this)">
        <button class="btn btn-outline-success my-2 my-sm-0" type="button">搜尋</button>
      </form>
    </nav>
    <ul class="list-group">
      <img src="../images/ERROR.gif" style="display: none;">
      <% project.forEach(ele => { %>
      <li class="list-group-item">
        <div class="nameAndScore">
          <span><%= ele.Name%></span>
          <span class="scoreContainer" style="color:#707070">訪客投票數:<%= ele.Vote %></span>
        </div>
        <div>
          <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
            <button type="button" id="liketovote" class="btn btn-danger liketovote <%= ele.Name %>">我喜歡♡</button>
          </div>

          <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-primary  <%= ele.Name %>">瀏覽專題</button>
          </div>
        </div>
      </li>
      <% }) %>
    </ul>

    <div class="row justify-content-md-center">
      <div aria-label="Page navigation example">
        <div class="pagination" id="pageid">
        </div>
      </div>
    </div>

  </div>






</body>

</html>